{
  "name": "@zcorp/tooling-config",
  "version": "1.0.4",
  "private": true,
  "scripts": {
    "lint": "eslint . --fix",
    "release": "bumpp -r && pnpm -r publish",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@zcorp/eslint-config": "workspace:*",
    "@zcorp/prettier-config": "workspace:*",
    "bumpp": "^9.4.1",
    "eslint": "^8.57.0",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "@babel/core",
        "prettier"
      ]
    }
  }
}
